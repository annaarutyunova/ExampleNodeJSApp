<!-- A content heading -->
<% if (title) { %>
    <h1 class="bold" id="addClassificationTitle"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<!-- A message -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice semi-bold">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form id="addClassForm" action="/inv/add-classification" method="post">
    <label for="classification_name" class="regular"><strong>Classification Name</strong><br><br>
        Name must be alphabetic characters only</label><br>
    <input type="text" id="className" name="classification_name" required pattern="[A-Za-z]+" value="<%= locals.classification_name %>"><br>
    <input type="submit" value="Add Classification" class="semi-bold" id="addClassButton">
</form>
